<!-- footer container -->
<footer id="footer" class="footer">
  <div class="footer-container">
    <% // 优先使用 site.data.site_info.social，回退到 theme.social_icon.icons %>
    <% var site_info = (site && site.data && site.data.site_info) ? site.data.site_info : {}; %>
    <% var social = (site_info && site_info.social) ? site_info.social : (theme && theme.social_icon && theme.social_icon.icons ? theme.social_icon.icons : {}); %>
    <% if (social && Object.keys(social).length) { %>
    <div class="social-icons">
      <% for (var i in social) { %>
        <% if (social[i]) { %>
          <a href="<%= social[i] %>" class="soft-size--primary soft-style--box" target="_blank" rel="noopener noreferrer">
            <% try { %>
              <%- partial("../_svg/social-"+ i +".svg") %>
            <% } catch (e) { %>
              <span><%= i %></span>
            <% } %>
          </a>
        <% } %>
      <% } %>
    </div>
    <% } %>
    <p>&copy; <%= date(new Date(), 'YYYY') %> <a href="/" target="_blank"><%= config.author %></a></p>

    <% if (theme.beian) { %>
      <p><a href="https://beian.miit.gov.cn" target="_blank"><%= theme.beian %></a></p>
    <% } %>

    <p>Powered by <a href="https://hexo.io" target="_blank" rel="noopener noreferrer">Hexo</a> Theme - <a href="https://github.com/miiiku/flex-block" target="_blank" rel="noopener noreferrer author">flex-block</a></p>

    <p>
      <a href="javascript:;" id="theme-light">🌞 浅色</a>
      <a href="javascript:;" id="theme-dark">🌛 深色</a>
      <a href="javascript:;" id="theme-auto">🤖️ 自动</a>
    </p>
  </div>
</footer>